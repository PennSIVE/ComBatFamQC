Package: ComBatFamQC
Title: Comprehensive Batch Effect Diagnostics and Harmonization
Version: 1.0.0
Authors@R: c(
    person("Zheng", "Ren", email = "zren1422@gmail.com", role = c("aut", "cre", "cph"), comment = c(ORCID = "0009-0006-2430-4625")),
